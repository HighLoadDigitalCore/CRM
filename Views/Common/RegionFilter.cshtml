@model List<string>
<div id="RegionFilter">
    <div class="row" style="margin-bottom: 10px">
        <div class="col-lg-2">
            <div class="input-group m-bot15">
                <div class="input-group-btn">
                    <button tabindex="-1" class="btn btn-primary" type="button" style="margin-right: 20px" onclick="initRegions();$('#region-filter').modal('show');">Выбрать регионы</button>
                </div>
            </div>
        </div>
        <div class="col-lg-10">
            @if (Model.Any())
            {
                <b>Выбранные регионы:</b>
                <div class="regions">
                    @foreach (var region in Model)
                    {
                        <div class="region-filter">
                            <span>@region</span>&nbsp;<a href="#nogo" title="Удалить" onclick="deleteRegion(this)">X</a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("RegionFilterPopup")