@model List<string>
@{
    var selected = OrderFilter.Regions;
}
<div class="modal fade bs-example-modal-sm" id="region-filter" tabindex="-1" data-backdrop="static"
     data-keyboard="false" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="reloadPage();">×</button>
                <h4 class="modal-title" id="mySmallModalLabel">Выберите регионы из списка</h4>
            </div>
            <div class="modal-body">
                <div class="serials-list">
                    @foreach (var serial in Model)
                    {
                        <div class="serial-item"><input onchange="toggleRegion(this)" type="checkbox" /> <span>@serial</span></div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>