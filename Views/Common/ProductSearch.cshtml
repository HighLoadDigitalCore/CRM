    <script src="/Content/assets/data-tables/jquery.dataTables.columnFilter.js"></script>
    <script src="/Content/assets/lou-multi-select/js/jquery.multi-select.js"></script>
    <script src="/Content/js/dtextend.js"></script>
    <link href="/Content/assets/morris.js-0.4.3/morris.css" rel="stylesheet" />
    <script src="/Content/assets/morris.js-0.4.3/morris.js"></script>
    <script src="/Content/assets/morris.js-0.4.3/raphael-min.js"></script>


    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            initOrdersUI();
            createActions();
        });
        function initOrdersUI() {
            initDataTableHelper();
        }
        function changeShop(obj) {
            var ref = document.location.href.substr(0, document.location.href.indexOf('ShopID/') + 7) + $(obj).val();
            var hash = "";
            if (document.location.href.indexOf('?') >= 0) {
                hash = document.location.href.substr(document.location.href.indexOf('?') + 1);
                ref += "?" + hash;
            }
            document.location.href = ref;
        }
        function changeStore(obj) {
            var ref = document.location.href.substr(0, document.location.href.indexOf('StoreID/') + 8) + $(obj).val();
            var hash = "";
            if (document.location.href.indexOf('?') >= 0) {
                hash = document.location.href.substr(document.location.href.indexOf('?') + 1);
                ref += "?" + hash;
            }
            document.location.href = ref;
        }
    </script>
}
