@model Customer
<div id="CustomerForm">
    <div class="">
        <section class="panel">

            <div class="panel-body">
                @using (Ajax.BeginForm("UserForm", "Shop", new { }, new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "CustomerForm", OnComplete = "refreshOrderProducts();autoCompleteUser();" }, new { @class = "form-horizontal tasi-form" }))
                {

                    <header class="panel-heading">
                        <h3>Данные о покупателе</h3>


                    </header>

                    <input type="hidden" name="OrderID" value="@Model.OrderID" />
                    <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
                    if (Model.Message.IsFilled())
                    {

                        <div class="form-group">
                            <label class="col-sm-4 control-label col-lg-4"></label>
                            <div class="col-lg-8">
                                <span style="color: green; font-weight: bold">@Model.Message</span>
                            </div>
                        </div>
                    }
                    <div class="form-group @(Model.IsPost && Model.Surname.IsNullOrEmpty() ? "has-error" : "")">
                        <label class="col-sm-4 control-label">Фамилия</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" value="@Model.Surname" name="Surname">
                        </div>
                    </div>
                    <div class="form-group @(Model.IsPost && Model.Name.IsNullOrEmpty() ? "has-error" : "")">
                        <label class="col-sm-4 control-label">Имя</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" value="@Model.Name" name="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Отчество</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" value="@Model.Patrinomic" name="Patrinomic">
                        </div>
                    </div>
                    <div class="form-group" @(Model.IsPost && !Model.Sex.HasValue ? "has-error" : "")>
                        <label class="col-sm-4 control-label">Пол</label>
                        <div class="col-sm-7">
                            <label>
                                <input type="radio" style="margin-right: 3px" value="True" @(Model.Sex.HasValue && Model.Sex.Value ? "checked" : "") name="Sex" />Мужской
                            </label>
                            <label>
                                <input type="radio" style="margin-right: 3px" value="False" @(Model.Sex.HasValue && !Model.Sex.Value ? "checked" : "") name="Sex" />Женский
                            </label>
                        </div>
                    </div>
                    <div class="form-group @(Model.IsPost && Model.Phone.IsNullOrEmpty() ? "has-error" : "")">
                        <label class="col-sm-4 control-label">Телефон</label>
                        <div class="col-sm-7">
                            <input type="text" data-mask="+7(999) 999-99-99" class="form-control" value="@Model.Phone" name="Phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Доп. телефон</label>
                        <div class="col-sm-7">
                            <input type="text" data-mask="+7(999) 999-99-99" class="form-control" value="@Model.AddPhone" name="AddPhone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Email</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" value="@Model.Email" name="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8">

                        </div>
                        <div class="col-sm-4">
                            <input type="submit" style="float: right" class="btn btn-success" value="Сохранить" />
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>