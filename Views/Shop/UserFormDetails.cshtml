@model Customer
<div id="CustomerForm">
    <div class="col-lg-6">
        <section class="panel">
            <div class="panel-body">
                <header class="panel-heading">
                    <h3>Данные о покупателе</h3>
                </header>
                <input type="hidden" name="OrderID" value="@Model.OrderID" />
                <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
                <div class="form-group">
                    <label class="col-sm-4 control-label">Фамилия</label>
                    <div class="col-sm-7">
                        <label class="form-control" name="Surname">@Model.Surname</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Имя</label>
                    <div class="col-sm-7">
                        <label class="form-control" name="Name">@Model.Name</label>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Отчество</label>
                    <div class="col-sm-7">
                        <label class="form-control" name="Patrinomic">@Model.Patrinomic</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Пол</label>
                    <div class="col-sm-7">
                        <select class="form-control" name="Sex" disabled="disabled" style="margin-bottom: 5px">
                            <option value="True" @(Model.Sex.HasValue && Model.Sex.Value ? "selected" : "")>Мужской</option>
                            <option value="False" @(Model.Sex.HasValue && !Model.Sex.Value ? "selected" : "")>Женский</option>
                        </select>
                        
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Телефон</label>
                    <div class="col-sm-7">
                        <label class="form-control" name="Phone">@Model.Phone</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Доп. телефон</label>
                    <div class="col-sm-7">
                        <label class="form-control" name="AddPhone">@Model.AddPhone</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-7">
                        <label class="form-control" name="Email">@Model.Email</label>
                    </div>
                </div>
            
            </div>
        </section>
    </div>
</div>