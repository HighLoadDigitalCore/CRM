@model List<Store>
<div id="Stores" arg="@ViewBag.ProductID">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading"><h3>Товар находится на следующих складах:</h3></header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th>Название</th>
                                <th>Адрес</th>
                            </tr>
                            <tr class="fr">
                                <th type="text">Название</th>
                                <th type="text">Адрес</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td><a href="@Url.Action("StoreEdit", "Store", new{ID = item.ID})">@item.Name</a></td>
                                    <td>@item.DeliveryAddress.FullAddress</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Название</th>
                                <th>Адрес</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>