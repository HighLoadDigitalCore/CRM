@model Order
<div id="DeliveryPopupContent">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="mySmallModalLabel">Уточнение расположение:</h4>
        </div>
        <div class="modal-body delivery">
            @if (Model != null)
            {
                <b class="adress">Адрес: @Model.OrderDeliveryOrNull.FullAddress</b>
                <br />
                <small id="coords" arg="@Model.ID" lat="@Model.OrderPointData.PointData.Lat" lng="@Model.OrderPointData.PointData.Lng">Координаты: @Model.OrderPointData.PointData.Lat.ToString("f8");@Model.OrderPointData.PointData.Lng.ToString("f8")</small>
                <br/>
                <br/>
                <span style="border-bottom: 1px dotted gray">Перетащите маркер в нужное место</span>
                <input type="hidden" value="@(new JsonSerializable(Model.OrderPointData).ToString())" id="OrderPointData" />
                <div id="adressMap" style="height: 300px; width: 100%"></div>
                <br/>
                <input type="submit" class="btn btn-success" value="Сохранить" onclick="saveCoords(); $('#DeliveryPopup').modal('hide');"/>
            }
            
        </div>
    </div>
</div>